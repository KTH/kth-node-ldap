{
  "name": "kth-node-ldap",
  "version": "4.0.0",
  "description": "Adds a Promise-based API on top of ldapjs as well as a filter builder.",
  "main": "index.js",
  "automaticPublish": "true",
  "scripts": {
    "test:mocha": "mocha tests/__mocha_tests__/** --exit",
    "test": "is-ci-cli \"test:jest\" \"test:watch\"",
    "test:jest": "mocha tests/__mocha_tests__/** --exit && jest",
    "test:watch": "mocha tests/__mocha_tests__/** --exit && jest --watch",
    "postversion": "git push && git push --tags",
    "build": "./build.sh",
    "lint": "eslint \"**/*.{js,jsx}\" --quiet",
    "lint-v": "eslint \"**/*.{js,jsx}\" "
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KTH/kth-node-ldap.git"
  },
  "author": {
    "name": "KTH",
    "email": "infosys@kth.se",
    "url": "https://github.com/KTH"
  },
  "keywords": [
    "ldap",
    "ldapjs",
    "promise",
    "filter"
  ],
  "license": "MIT",
  "dependencies": {
    "async": "^3.2.0",
    "ldapjs": "^2.1.1",
    "ldapts": "^2.7.0"
  },
  "peerDependencies": {
    "kth-node-log": "^3.1.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "kth-node-log": "^3.1.0",
    "mocha": "^8.1.3",
    "mockery": "^2.1.0",
    "husky": "^4.3.0",
    "prettier": "^2.1.1",
    "pretty-quick": "3.0.2",
    "eslint": "^7.9.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "is-ci-cli": "^2.1.2",
    "jest": "^26.4.2"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 140
  },
  "husky": {
    "hooks": {
      "pre-push": "CI=1 npm run test",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018,
      "ecmaFeatures": {
        "classes": true,
        "impliedStrict": true
      }
    },
    "env": {
      "node": true
    },
    "extends": [
      "airbnb",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "semi": [
        "error",
        "never"
      ],
      "global-require": 0,
      "prefer-template": 0,
      "import/order": 0,
      "no-plusplus": 0,
      "no-restricted-syntax": 0,
      "no-await-in-loop": 1,
      "no-useless-catch": 1,
      "for-direction": 0,
      "getter-return": 0,
      "no-async-promise-executor": 1,
      "no-misleading-character-class": 1,
      "lines-between-class-members": 0,
      "prefer-object-spread": 1,
      "sort-imports": [
        "error",
        {
          "ignoreCase": true,
          "ignoreDeclarationSort": true,
          "ignoreMemberSort": true,
          "memberSyntaxSortOrder": [
            "all",
            "single",
            "multiple",
            "none"
          ]
        }
      ],
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ],
      "strict": 0
    }
  }
}
